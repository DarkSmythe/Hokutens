root = true

[*.lua]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true

[*.{cpp,h}]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
indent_brace_style = Allman # This is unfortunately ignored in the Visual Studio add on

# Makefiles actually require the tabs.
[Makefile]
indent_style = tab
